{
  // Extiende la configuraci贸n estricta recomendada por Astro
  "extends": "astro/tsconfigs/strict",

  // Archivos y patrones a incluir en la comprobaci贸n de tipos
  "include": [
    ".astro/types.d.ts", // Tipos generados por Astro
    "**/*"               // Todos los archivos del proyecto
  ],

  // Archivos y carpetas a excluir de la comprobaci贸n de tipos
  "exclude": [
    "dist" // Carpeta de salida de compilaci贸n
  ],

  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@components/react/*": ["src/components/react/*"],
      "@components/layout/*": ["src/components/layout/*"],
      "@components/pages/*": ["src/components/pages/*"],
      "@ui/*": ["src/components/ui/*"],
      "@layouts/*": ["src/layouts/*"],
      "@pages/*": ["src/pages/*"],
      "@styles/*": ["src/styles/*"],
      "@data/*": ["src/data/*"],
      "@react/*": ["src/react/*"],
      "@sections/*": ["src/components/sections/*"],
      "@assets/*": ["src/assets/*"],
      "@utils/*": ["src/utils/*"]
    },
    "resolveJsonModule": true,
    "esModuleInterop": true
  }
}