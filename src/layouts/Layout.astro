---
import Navbar from '../components/Navbar.astro';
import Footer from '../components/Footer.astro';

import { ClientRouter } from 'astro:transitions';
import '../styles/global.css';
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/parcon.webp" />
    <title>PARCON</title>
 
  </head>

  <body class="bg-[#0A0A23] text-white min-h-screen flex flex-col items-center">
    <Navbar />

    <main class="w-screen flex-grow flex flex-col items-center  ">
    <ClientRouter transition:name='slide'/>
      <slot />

    </main>

    <Footer />
  </body>
</html>

