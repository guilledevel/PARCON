---
import Layout from "@layouts/Layout.astro";
import data from "@data/productos.json";
const category = Object.keys(data.categorias);
---

<Layout>
  <h1 class="text-3xl font-bold mb-4">nuestros productos</h1>
  <!-- seccion de fitros -->
  <section class="">
    <ul class="flex gap-2 flex-wrap justify-center">
      <a
        href="/productos"
        class="rounded-lg bg-gradient-to-r from-cyan-400 to-pink-700 py-2 px-3 text-sm font-semibold text-white transition-all hover:from-cyan-700 hover:to-blue-800 active:scale-95 shadow-md hover:shadow-lg"
        >TODOS</a
      >{
        category.map((item) => (
          <a
            href={`/productos/${item}`}
            class=" rounded-lg bg-gradient-to-r from-cyan-600 to-blue-700 py-2 px-3 text-sm font-semibold text-white transition-all hover:from-cyan-700 hover:to-blue-800 active:scale-95 shadow-md hover:shadow-lg">
            {item}
          </a>
        ))
      }
    </ul>
  </section>
  <slot />
</Layout>
