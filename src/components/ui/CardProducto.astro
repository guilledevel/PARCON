---
const { nombre, imagen, precio, descripcion } = Astro.props;
const producto = { nombre, imagen, precio, descripcion };
---

<div class="bg-white dark:bg-gray-800 rounded-lg shadow-md overflow-hidden p-2">
  <img
    src={imagen}
    alt={nombre}
    class="w-full h-48 object-cover rounded-lg transform transition duration-300 hover:scale-105"
  />
  <div class="p-4">
    <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-white">
      {nombre}
    </h3>
    <p class="text-gray-600 dark:text-gray-300 text-justify">
      {descripcion}
    </p>
    <p class="text-gray-600 dark:text-gray-300 text-lg font-bold">{precio}</p>
  </div>
</div>
